{
	"name": "cppsolution",
	"displayName": "CppSolution",
	"description": "make vscode powerfull",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "CppSolutionExplorer",
					"title": "Cpp Solution Explorer",
					"icon": "icons/activity-icon.png"
				}
			]
		},
		"views": {
			"CppSolutionExplorer": [
				{
					"id": "CppSolutionView",
					"name": "C++ Projects"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"copy-paste": "^1.1.30",
		"@types/copy-paste": "^1.1.30"
	}
}
